{
  "name": "Accessibility Off - הסרת סרגלי נגישות",
  "author": "Igor Glizer (https://github.com/igor-glizer-87)",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Turn off accessibility toolbars on Israeli websites.",
  "homepage_url": "https://github.com/igor-glizer-87/accessibility-off-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": []
  },
  "permissions": [
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["bundle.js"],
	  "run_at": "document_end"
    }
  ]
}